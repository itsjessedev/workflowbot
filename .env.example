# Application Settings
APP_NAME=WorkflowBot
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-in-production-use-secrets-generator

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://workflowbot:workflowbot@localhost:5432/workflowbot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Demo Mode (set to true to run without Slack)
DEMO_MODE=false

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# n8n Integration (optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
SENTRY_DSN=
METRICS_ENABLED=true

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=workflowbot@example.com

# Calendar Integration (optional)
GOOGLE_CALENDAR_CREDENTIALS=
CALENDAR_ID=

# File Storage
UPLOAD_DIR=/tmp/workflowbot/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Workflow Settings
DEFAULT_APPROVAL_TIMEOUT=86400  # 24 hours in seconds
MAX_APPROVAL_REMINDERS=3
REMINDER_INTERVAL=28800  # 8 hours

# Feature Flags
FEATURE_ONBOARDING=true
FEATURE_EXPENSES=true
FEATURE_PTO=true
FEATURE_ANALYTICS=true
